<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for product variants -->
    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="after">
            <field name="variant_price" string="Variant Price"  widget="monetary" options="{'currency_field': 'currency_id'}"/>
        </xpath>
        </field>
    </record>

    <!-- Tree view for product variants -->
    <record id="product_product_tree_view_inherit_sales_price" model="ir.ui.view">
        <field name="name">product.product.list.sales.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="before">
                <field name="variant_price" string="Variant Price" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
