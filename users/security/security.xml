<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Group: Restricted Salesperson -->
    <record id="group_restricted_salesperson" model="res.groups">
        <field name="name">Restricted Salesperson</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Optional: Access Rights -->
    <record id="access_restricted_salesperson_user" model="ir.model.access">
        <field name="name">restricted.salesperson.access</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="group_id" ref="users.group_restricted_salesperson"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
