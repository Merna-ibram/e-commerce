<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_inherit_restricted" model="ir.ui.view">
        <field name="name">res.users.form.restricted.salesperson</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- نضيف مجموعة جديدة داخل صفحة Access Rights -->
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Salesperson Settings">
                    <field name="is_restricted_salesperson"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
